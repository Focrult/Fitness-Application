<div class="col-md-4 ">
  <h2>Sign Up</h2>
  <form class="form signup-form">
  <div class="mb-3 form form-group">
    <label for="name-signup"  class="form-label">Name:</label>
    <input type="text" class="form-control form-input" id="name-signup" />
  </div>      
  <div class="mb-3 form form-group">
    <label for="email-signup" class="form-label">Email:</label>
    <input type="text" class="form-control form-input" id="email-signup">
  </div>
  <div class="mb-3 form form-group">
    <label for="password-signup" class="form-label">Password:</label>
    <input type="password" class="form-control form-input" id="password-signup">
  </div>
  <div class="form-group">
    <a href="/questionforms">
      <button type="submit" class="btn btn-primary">Sign up</button>
    </a> 
  </div>
</form>
</div>

